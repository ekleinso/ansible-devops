apiVersion: v1
kind: ConfigMap
metadata:
  name: cluster-monitoring-config
  namespace: openshift-monitoring
data:
  config.yaml: |
    prometheusOperator:
      baseImage: quay.io/coreos/prometheus-operator
      prometheusConfigReloaderBaseImage: quay.io/coreos/prometheus-config-reloader
      configReloaderBaseImage: quay.io/coreos/configmap-reload
      {% if monitoring_use_infra %}
      nodeSelector:
        node-role.kubernetes.io/infra: ""
      {% endif %}
    prometheusK8s:
      retention: {{ prometheus_retention_period }}
      baseImage: openshift/prometheus
      {% if monitoring_use_infra %}
      nodeSelector:
        node-role.kubernetes.io/infra: ""
      {% endif %}
      volumeClaimTemplate:
        spec:
          {% if prometheus_storage_class is defined %}
          storageClassName: {{ prometheus_storage_class }}
          {% endif %}
          resources:
            requests:
              storage: {{ prometheus_storage_size }}
    alertmanagerMain:
      baseImage: openshift/prometheus-alertmanager
      {% if monitoring_use_infra %}
      nodeSelector:
        node-role.kubernetes.io/infra: ""
      {% endif %}
      volumeClaimTemplate:
        spec:
          {% if alertmanager_storage_class is defined %}
          storageClassName: {{ alertmanager_storage_class }}
          {% endif %}
          resources:
            requests:
              storage: {{ alertmanager_storage_size }}
    nodeExporter:
      baseImage: openshift/prometheus-node-exporter
    kubeRbacProxy:
      baseImage: quay.io/coreos/kube-rbac-proxy
    kubeStateMetrics:
      baseImage: quay.io/coreos/kube-state-metrics
      {% if monitoring_use_infra %}
      nodeSelector:
        node-role.kubernetes.io/infra: ""
      {% endif %}
    grafana:
      baseImage: grafana/grafana
      {% if monitoring_use_infra %}
      nodeSelector:
        node-role.kubernetes.io/infra: ""
      {% endif %}
    auth:
      baseImage: openshift/oauth-proxy
    k8sPrometheusAdapter:
      {% if monitoring_use_infra %}
      nodeSelector:
        node-role.kubernetes.io/infra: ""
      {% endif %}
