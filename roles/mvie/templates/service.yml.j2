apiVersion: v1
kind: Service
metadata:
  labels:
    app: "{{ mvie_namespace }}"
  name: mvie-service
  namespace: "{{ mvie_namespace }}"
spec:
  ports:
  - name: tcp-5432
    port: 5432
    protocol: TCP
    targetPort: 5432
  - name: tcp-443
    port: 443
    protocol: TCP
    targetPort: 443
  - name: tcp-883
    port: 8883
    protocol: TCP
    targetPort: 8883
  - name: tcp-9001
    port: 9001
    protocol: TCP
    targetPort: 9001
  selector:
    app: "{{ mvie_namespace }}"
  type: ClusterIP
